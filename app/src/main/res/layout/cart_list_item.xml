<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape"
    android:id="@+id/cart_layout"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/product_cart_image"
            android:src="@drawable/ic_action_category"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/product_cart_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/black"
                android:id="@+id/product_cart_category"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/product_cart_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mrp"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/product_cart_mrp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="12dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:id="@+id/product_cart_quantity"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="@color/black"
                android:id="@+id/product_cart_size"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_delete"
            android:id="@+id/delete_cart_item"/>
    </LinearLayout>

</LinearLayout>